/* form */
fieldset{
	border:solid 1px #DEDEDE;
	font-size:13px;
}
fieldset legend {
	font-weight:bold;

}
fieldset ul, fieldset li{
	border:0; margin:0; padding:0; list-style:none;height:auto;overflow:hidden;width:100%;position:relative;
}
fieldset li{
	list-style:none;
	padding:10px;
}

fieldset input{
	float:left;
}
fieldset label{
	width:140px;
	float:left;
}
fieldset button{ 
		border:0; margin:0; padding:0;
		clear:both;
		width:125px;
		height:31px;
		background:#666666 url(../static/img/button.png) no-repeat;
		text-align:center;
		line-height:31px;
		color:#FFFFFF;
		font-size:11px;
		font-weight:bold;
	}